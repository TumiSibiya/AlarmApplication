<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cpuntDownTimerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="2dp"
    android:paddingHorizontal="1dp">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="306dp"
        android:layout_height="349dp"

        android:background="@drawable/circular_shape"

        android:indeterminate="false"

        android:max="0"
        android:progress="0"

        android:progressDrawable="@drawable/circular_progress_bar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <TextView
        android:id="@+id/textviewfortimer"
        android:layout_width="161dp"
        android:layout_height="78dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="35sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/buttonStartPauseTimerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/timer_curved_button"
        android:text="@string/startbuttonpress"
        android:textColor="@android:color/holo_green_dark"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonRestTimerId"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546" />

    <Button
        android:id="@+id/buttonRestTimerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/resetbuttonpress"
        android:textColor="@android:color/black"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/minute_edit_text_id"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:ems="10"
        android:gravity="center"
        android:hint="minute"
        android:textColor="@android:color/holo_green_light"
        android:inputType="number"
        android:maxLength="2"

        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/hours_edit_text_id"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:hint="hour"
        android:textColor="@android:color/holo_green_light"

        android:inputType="number"
        android:maxLength="2"

        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/seconds_edit_text_id"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:hint="seconds"
        android:textColor="@android:color/holo_green_light"
        android:inputType="number"
        android:maxLength="2"

        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:text="set"

        android:textColor="#0B9511"
        android:background="@drawable/stopwatch_start_button_curved"
        android:backgroundTint="#E2E3E2"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_clear_set"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:background="@drawable/stopwatch_start_button_curved"
        android:backgroundTint="#E2E3E2"
        android:text="Clear"
        android:textColor="#000000"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_NewTime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="NEW TIME"
        android:textColor="@android:color/white"

        android:background="@drawable/timer_newtime_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

</androidx.constraintlayout.widget.ConstraintLayout>